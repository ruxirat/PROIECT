@model IEnumerable<Ratiu_Ruxandra_Proiect.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group" style="max-width: 520px;">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Search (patient / doctor / service)" />
        <button type="submit" class="btn btn-outline-secondary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["PatientSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Patient
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DoctorSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Doctor
                </a>
            </th>
            <th>
                Service
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DateSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    DateTime
                </a>
            </th>
            <th>Status</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Patient != null ? item.Patient.FullName : "")</td>
                <td>@(item.Doctor != null ? item.Doctor.LastName : "")</td>
                <td>@(item.Service != null ? item.Service.Name : "")</td>
                <td>@item.DateTime</td>
                <td>@item.Status</td>
                <td>@item.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
