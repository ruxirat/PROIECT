@using Ratiu_Ruxandra_Proiect.Grpc
@model IEnumerable<PatientMessage>

<h2>Patients (gRPC)</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create (gRPC)</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FullName</th>
            <th>Phone</th>
            <th>Email</th>
            <th>BirthDate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PatientId</td>
                <td>@p.FullName</td>
                <td>@p.Phone</td>
                <td>@p.Email</td>
                <td>@p.BirthDate</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@p.PatientId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
